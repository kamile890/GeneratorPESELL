<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Podaj rok urodzenia: "
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"/>

    <EditText
        android:id="@+id/rok_urodzenia_EditText"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:hint="Wpisz rok urodzenia"
        android:inputType="number"
        android:textSize="20sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/generuj_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:onClick="generuj_pesel"
        android:text="Generuj" />

    <EditText
        android:id="@+id/pesel_editText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/kopiuj_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:onClick="kopiuj"
        android:text="Kopiuj" />



</RelativeLayout>